{
  "name": "paperclip-monorepo",
  "private": true,
  "scripts": {
    "local:dev": "node scripts/dev-apps.js",
    "build": "dotenv -e .env.production -- turbo build",
    "start": "dotenv -e .env.production -- turbo start",
    "lint": "dotenv -e .env.local -- turbo lint",
    "lint:fix": "dotenv -e .env.local -- turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -o -name .tsbuildinfo -o -name dist -type d -prune | xargs rm -rf",
    "type-check": "NODE_OPTIONS=--max-old-space-size=4096 dotenv -e .env.local -- turbo run type-check",
    "postinstall": "pnpm --filter backend prisma generate",
    "db:generate": "dotenv -e .env.local -- pnpm --filter backend prisma generate",
    "db:migrate": "dotenv -e .env.local -- pnpm --filter backend prisma migrate dev",
    "db:push": "dotenv -e .env.local -- pnpm --filter backend prisma db push",
    "db:studio": "dotenv -e .env.local -- pnpm --filter backend prisma studio"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "node": ">=20.17.0"
  }
}
