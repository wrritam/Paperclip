generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  password       String
  is_verified    Boolean
  otp            Int?
  last_login     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  requestLogs RequestLog[]
  insights    Insight[]
}

model RequestLog {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  method         String
  url            String
  status         Int
  responseTimeMs Int
  responseSizeKB Float
  isError        Boolean  @default(false)
  responseBody   Json?
  headers        Json?
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())
}

model Insight {
  id                     String   @id @default(cuid())
  userId                 String
  user                   User     @relation(fields: [userId], references: [id])
  endpoint               String   // "GET /api/products"
 
  // Performance Metrics
  avgResponseTime        Int      // ms
  errorRate              Float    // 0.0 - 1.0
  slowestResponse        Int      // ms
  avgPayloadSizeKB       Float
  statusCodeDistribution Json     // { "200": 45, "500": 5 }
  mostCommonHeaders      Json?    // { "content-type": "application/json" }
  recentOutputs          Json?    // Optional: last 3 JSON responses
  score                  Int      // Performance score (0â€“100)

  // AI
  aiTips                 Json?    // { "indexSuggestion": "...", "cacheTip": "..." }
  summary                String   // Human-readable AI summary

  createdAt              DateTime @default(now())
}
