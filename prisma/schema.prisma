generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  name        String?
  password    String
  is_verified Boolean
  otp         Int?
  last_login  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  requests    Requests[]
}

model Requests {
  id        Int         @id @default(autoincrement())
  userId    Int
  method    String
  url       String
  createdAt DateTime    @default(now())

  user        User        @relation(fields: [userId], references: [id])
  requestLogs RequestLog[]
  insights    Insight[]
}

model RequestLog {
  id         Int       @id @default(autoincrement())
  requestId  Int
  request    Requests  @relation(fields: [requestId], references: [id])
  insightId  Int?
  insight    Insight?  @relation(fields: [insightId], references: [id])

  status         Int
  responseTimeMs Int
  responseSizeKB Float
  isError        Boolean  @default(false)
  responseBody   Json?
  headers        Json?
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())
}

model Insight {
  id                     Int         @id @default(autoincrement())
  requestId              Int
  request                Requests    @relation(fields: [requestId], references: [id])

  // Performance Metrics
  avgResponseTime        Int         // ms
  errorRate              Float       // 0.0 - 1.0
  slowestResponse        Int         // ms
  avgPayloadSizeKB       Float
  statusCodeDistribution Json        // { "200": 45, "500": 5 }
  mostCommonHeaders      Json?
  recentOutputs          Json?
  score                  Int         

  // AI
  aiTips                 Json?
  summary                String

  requestLogs            RequestLog[]
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt
}
